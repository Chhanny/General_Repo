@using OnPointSport.Core.Models

@model IEnumerable<Discount>
@{
    ViewBag.Title = "DiscountsInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ពត៍មានការបញ្ចុះតម្លៃ
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> បញ្ជីពពត៍មានការបញ្ចុះតម្លៃ</a></li>
            <li class="active">ពត៍មានការបញ្ចុះតម្លៃ</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-body" style="padding-bottom:15px;">
                        <!-- Date -->
                        <div class="form-group">
                            <div class="row" style="padding-top: 10px;">
                                @using (Html.BeginForm("DiscountsInformation", "Discounts", FormMethod.Get))
                                {
                                    <div class="col-md-1" style="padding-left:55px; width:auto">
                                        <div class="checkbox">
                                            @Html.CheckBox("Active", true)សុពលភាព
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-md-6">
                                                @Html.TextBox("search", null, new { @class = "form-control", @style = "background-color:#fff;", @placeholder = "ស្វែងរក... " })
                                            </div>
                                            <div class="col-md-2">
                                                <button id="btnSearch" type="submit" class="btn btn-success"><i class="fa fa-search"></i> ស្វែងរក </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="form-group" style="padding-left:20px; padding-right: 20px;" id="DivCompanyInformation1">
                            <div class="box-body box-shadow">
                                <table id="tbDiscount" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>លេខកូដ</th>
                                            <th>ឈ្មោះ</th>
                                            <th>ពីថ្ងៃទី</th>
                                            <th>ទៅថ្ងៃទី</th>
                                            <th>អត្រា</th>
                                            <th>ផ្សេងៗ</th>
                                            <th>សុពលភាព</th>
                                            <th>សកម្មភាព</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var discount in Model)
                                        {
                                            <tr>
                                                <td>@discount.Code</td>
                                                <td>@discount.Name</td>
                                                <td>@discount.Debut.ToString("dd-MMM-yyyy")</td>
                                                <td>@discount.Fin.ToString("dd-MMM-yyyy")</td>
                                                <td>@discount.Rate</td>
                                                <td>@discount.Description</td>
                                                <td><input type="checkbox" checked="@discount.Active" disabled="disabled" /></td>
                                                <td>@Html.ActionLink(" ", "CreateDiscount", new { Code = @discount.Code }, new { @class = "fa fa-edit", title  = "Edit", @style = "color:blue; font-size:20px;margin:0px; padding:0px;" })</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tbDiscount').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}

