@model OnPointSport.Core.Models.Discount
@{
    ViewBag.Title = "CreateDiscount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }

        #row label {
            padding-top: 10px;
        }

    .box-primary {
        padding: 0px 20px 20px 20px; /* top right bottom left */
    }

    .box-shadow {
        margin-top: 30px;
    }
</style>

@using (Html.BeginForm("CreateDiscount", "Discounts", FormMethod.Post))
{
    <!-- Content Wrapper. Contains page content-->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                ពត៍មានការបញ្ចុះតម្លៃ
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> ពត៍មានការបញ្ចុះតម្លៃ</a></li>
                <li class="active">បង្កើតការបញ្ចុះតម្លៃ</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-5">
                                    <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save"></i> រក្សាទុក </button>&nbsp;
                                    <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DiscountsInformation", "Discounts")'"><i class="fa fa-remove"></i> បោះបង់ </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="DivEmployee" class="box-body box-shadow">
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>លេខកូដ:</label></div>
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control pull-right", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })
                                            <b> សុពលភាព</b>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ឈ្មោះ:</label></div>
                                    <div class="col-md-3">
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>អត្រា:</label></div>
                                    <div class="col-md-3">
                                        @Html.ValidationMessageFor(m => m.Rate, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Rate, new { @class = "form-control pull-right", @type = "number" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ពីថ្ងៃទី:</label></div>
                                    <div class="col-md-4">
                                        @Html.ValidationMessageFor(m => m.Debut, "", new { @class = "text-danger" })
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(m => m.Debut, "{0:MM/dd/yyyy}", new { @class = "form-control pull-right", id = "dtpDebut" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ទៅថ្ងៃទី:</label></div>
                                    <div class="col-md-4">
                                        @Html.ValidationMessageFor(m => m.Fin, "", new { @class = "text-danger" })
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(m => m.Fin, "{0:MM/dd/yyyy}", new { @class = "form-control pull-right", id = "dtpFin" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ផ្សេងៗ:</label></div>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                            </div> <!--box-shadow-->
                        </div>

                    </div><!--box-body-->
                </div><!--box-primary-->
            </div> <!--row content-->
        </section>

    </div>
}
@section Scripts
    {
    <script>
        
        $(document).ready(function () {
            $('#dtpFin').datepicker({
                autoclose: true,
                todayHighlight: true
            })
            $('#dtpDebut').datepicker({
                autoclose: true,
                todayHighlight: true
            })
        })
    </script>
}

