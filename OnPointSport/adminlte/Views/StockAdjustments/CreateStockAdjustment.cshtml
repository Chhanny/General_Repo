@model OnPointSport.Core.Models.StockAdjustment
@{
    ViewBag.Title = "CreateStockAdjustment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var productServices = ViewBag.productServices;
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }

    #row label {
        padding-top: 10px;
    }

    .box-primary {
        padding: 0px 20px 20px 20px; /* top right bottom left */
    }

    .box-shadow {
        margin-top: 30px;
    }
</style>

@using (Html.BeginForm("CreateStockAdjustment", "StockAdjustments", FormMethod.Post))
{
    <!-- Content Wrapper. Contains page content-->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                ពត៍មានការកែប្រែស្ដុក
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> ពត៍មានកែប្រែស្ដុក</a></li>
                <li class="active">បង្កើកែប្រែស្ដុក</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-5">
                                    <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save"></i> រក្សាទុក </button>&nbsp;
                                    <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("StockAdjustmentsInformation", "StockAdjustments")'"><i class="fa fa-remove"></i> បោះបង់ </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="DivEmployee" class="box-body box-shadow">
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>លេខកូដ:</label></div>
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control pull-right", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })
                                            <b> សុពលភាព</b>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ឈ្មោះផលិតផល:</label></div>
                                    <div class="col-md-3">
                                        @Html.ValidationMessageFor(m => m.ProductServiceCode, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(m => m.ProductServiceCode, new SelectList(productServices, "Code", "Name"), "---- Select ----", new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ចំនួន:</label></div>
                                    <div class="col-md-4">
                                        @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control pull-right", Type = "number" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ផ្សេងៗ:</label></div>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                            </div> <!--box-shadow-->
                        </div>

                    </div><!--box-body-->
                </div><!--box-primary-->
            </div> <!--row content-->
        </section>
    </div>
}

