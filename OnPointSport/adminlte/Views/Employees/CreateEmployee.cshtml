@model OnPointSport.Core.Models.Employee
@{
    ViewBag.Title = "CreateEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }

    #row label {
            padding-top: 10px;
        }

    .box-primary {
        padding: 0px 20px 20px 20px; /* top right bottom left */
    }

    .box-shadow {
        margin-top: 30px;
    }
</style>
@using (Html.BeginForm("CreateEmployee", "Employees", FormMethod.Post))
{
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            ពត៍មានបុគ្គលិក
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-primary">
                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save"></i> រក្សាទុក </button>&nbsp;
                                <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("EmployeesInformation", "Employees")'"><i class="fa fa-remove"></i> បោះបង់ </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div id="DivEmployee" class="box-body box-shadow">

                            <div class="row" id="row">
                                <div class="col-md-2"><label>លេខកូដ:</label></div>
                                <div class="col-md-2">
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control pull-right", @readonly = "readonly" })
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })
                                        <b> សុពលភាព</b>
                                    </div>
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>ឈ្មោះ:</label></div>
                                <div class="col-md-3">
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control pull-right" })
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>ភេទ:</label></div>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(m => m.Gender,new List<SelectListItem> { new SelectListItem { Text="Male", Value="true"},
                                        new SelectListItem{Text="Female", Value="false"} }, new { @class = "form-control pull-right" })
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>លេខកូដកាត:</label></div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(m => m.IdCard, new { @class = "form-control pull-right" })
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>ថ្ងៃខែឆ្នាំកំណើត:</label></div>
                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                                    <div class="input-group date">
                                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                        @Html.TextBoxFor(m => m.DateOfBirth, "{0:MM/dd/yyyy}", new { @class = "form-control datetimepicker", id = "autodate" })
                                    </div>
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>លេខទូរស័ព្ទ:</label></div>
                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control pull-right" })
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>អ៊ីមែល:</label></div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control pull-right" })
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>ឤស័យដ្ឋាន:</label></div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control pull-right" })
                                </div>
                            </div>
                            <div class="row" id="row">
                                <div class="col-md-2"><label>ផ្សេងៗ:</label></div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })
                                </div>
                            </div>

                        </div> <!--box-shadow-->
                    </div>

                </div><!--box-body-->
            </div><!--box-primary-->
        </div> <!--row content-->
    </section> <!--content-->

</div> <!--content-wrapper-->
}
@section Scripts
    {
    <script>
        $(document).ready(function () {
            //Date picker
            $('#autodate').datepicker({
                autoclose: true
                //dateFormat: "MM/dd/yyyy"
            });
        });
    </script>
}

