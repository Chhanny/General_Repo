
@{
    ViewBag.Title = "MainForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }
    #row label {
        padding-top: 10px;
    }
    .box-primary {
        padding: 0px 20px 20px 20px; /* top right bottom left */
    }
    .box-shadow {
        margin-top: 30px;
    }
</style>
@using (Html.BeginForm("CreateCustomer", "Customers", FormMethod.Post))
{
    <div class="content-wrapper">
        <section class="content-header">

        </section>
        <section class="content">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    <button id="btnSave" type="submit" class="btn btn-info"> រក្សាទុក </button>&nbsp;
                                    <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("CustomersInformation", "Customers")'"> បោះបង់ </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="DivEmployee" class="box-body box-shadow">
                                

                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ផ្សេងៗ:</label></div>
                                    <div class="col-md-5">
                                        @*Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })*@
                                    </div>
                                </div>
                            </div> <!--box-shadow-->
                        </div>

                    </div><!--box-body-->
                </div><!--box-primary-->
            </div> <!--row content-->
        </section>
    </div>
}
