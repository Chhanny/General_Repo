@model OnPointSport.Core.Models.Supplier
@{
    ViewBag.Title = "CreateSupplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }

    #row label {
        padding-top: 10px;
    }

    .box-primary {
        padding: 0px 20px 20px 20px; /* top right bottom left */
    }

    .box-shadow {
        margin-top: 30px;
    }
</style>

@using (Html.BeginForm("CreateSupplier", "Suppliers", FormMethod.Post))
{
    <!-- Content Wrapper. Contains page content-->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                ពត៍មានអ្នកផ្គត់ផ្គង់
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> ពត៍មានអ្នកផ្គត់ផ្គង់</a></li>
                <li class="active">បង្កើតអ្នកផ្គត់ផ្គង់ថ្មី</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-5">
                                    <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save"></i> រក្សាទុក </button>&nbsp;
                                    <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("SuppliersInformation", "Suppliers")'"><i class="fa fa-remove"></i> បោះបង់ </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="DivEmployee" class="box-body box-shadow">
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>លេខកូដ:</label></div>
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control pull-right", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })
                                            <b> សុពលភាព</b>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ឈ្មោះ:</label></div>
                                    <div class="col-md-3">
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ទូរស័ព្ទទខ្សែទី១:</label></div>
                                    <div class="col-md-3">
                                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control pull-right", type = "tel" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ទូរស័ព្ទទខ្សែទី២:</label></div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Phone2, new { @class = "form-control pull-right", type = "tel" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>អ៊ីមែល:</label></div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control pull-right", type = "email" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>អាស័យដ្ឋាន:</label></div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ផ្សេងៗ:</label></div>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                            </div> <!--box-shadow-->
                        </div>

                    </div><!--box-body-->
                </div><!--box-primary-->
            </div> <!--row content-->
        </section>

    </div>
}

