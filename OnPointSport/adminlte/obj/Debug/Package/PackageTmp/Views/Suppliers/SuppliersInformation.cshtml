@using OnPointSport.Core.Models

@model IEnumerable<Supplier>
@{
   ViewBag.Title = "SuppliersInformation";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ពត៍មានអ្នកផ្គត់ផ្គង់
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> បញ្ជីពត៍មានអ្នកផ្គត់ផ្គង់</a></li>
            <li class="active">ពត៍មានអ្នកផ្គត់ផ្គង់</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-body" style="padding-bottom:15px;">
                        <!-- Date -->
                        <div class="form-group">
                            <div class="row" style="padding-top: 10px;">
                                @using (Html.BeginForm("SuppliersInformation", "Suppliers", FormMethod.Get))
                                {
                                    <div class="col-md-1" style="padding-left:55px; width:auto">
                                        <div class="checkbox">
                                            @Html.CheckBox("Active", true)សុពលភាព
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-md-6">
                                                @Html.TextBox("search", null, new { @class = "form-control", @style = "background-color:#fff;", @placeholder = "ស្វែងរក... " })
                                            </div>
                                            <div class="col-md-2">
                                                <button id="btnSearch" type="submit" class="btn btn-success"><i class="fa fa-search"></i> ស្វែងរក </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="form-group" style="padding-left: 20px; padding-right: 20px;" id="DivCompanyInformation1">
                            <div class="box-body box-shadow">
                                <table id="tbSupplier" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>លេខកូដ</th>
                                            <th>ឈ្មោះ</th>
                                            <th>ទូរស័ព្ទទខ្សែទី១</th>
                                            <th>ទូរស័ព្ទទខ្សែទី២</th>
                                            <th>អ៊ីមែល</th>
                                            <th>អាស័យដ្ឋាន</th>
                                            <th>សុពលភាព</th>
                                            <th>សកម្មភាព</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var supplier in Model)
                                        {
                                        <tr>
                                            <td>@supplier.Code</td>
                                            <td>@supplier.Name</td>
                                            <td>@supplier.Phone</td>
                                            <td>@supplier.Phone2</td>
                                            <td>@supplier.Email</td>
                                            <td>@supplier.Address</td>
                                            <td><input type="checkbox" checked="@supplier.Active" disabled="disabled" /></td>
                                            <td>@Html.ActionLink(" ", "CreateSupplier", new { Code = @supplier.Code }, new { @class = "fa fa-edit", title = "Edit", @style = "color:blue; font-size:20px; margin:0px; padding:0px;" })</td>
                                        </tr>
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tbSupplier').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}

