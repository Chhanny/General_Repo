@model OnPointSport.Core.Models.Customer
@{
    ViewBag.Title = "CreateCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }
    #row label {
        padding-top: 10px;
    }
    .box-primary {
        padding: 0px 20px 20px 20px; /* top right bottom left */
    }
    .box-shadow {
        margin-top: 30px;
    }
</style>

@using (Html.BeginForm("CreateCustomer", "Customers", FormMethod.Post))
{
    <!-- Content Wrapper. Contains page content-->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                ពត៍មានអតិថិជន
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> ពត៍មានអតិថិជន</a></li>
                <li class="active">បង្កើតអតិថិជនថ្មី</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">
                        <!-- Date -->
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save"></i> រក្សាទុក </button>&nbsp;
                                    <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("CustomersInformation", "Customers")'"><i class="fa fa-remove"></i> បោះបង់ </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                             <!-- /.box-header -->
                            <div id="DivCompanyForm" class="box-body box-shadow">

                                <div class="row" id="row">
                                    <div class="col-md-2"><label>លេខកូដ:</label></div>
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control pull-right", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })
                                            <b> សុពលភាព</b>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ឈ្មោះ:</label></div>
                                    <div class="col-md-3">
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class="text-danger"})
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ភេទ:</label></div>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.Gender,new List<SelectListItem> { new SelectListItem { Text="Male", Value="true"},
                                            new SelectListItem{Text="Female", Value="false"} }, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>លេខទូរស័ព្ទ:</label></div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>អ៊ីមែល:</label></div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>អាស័យដ្ឋាន:</label></div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-md-2"><label>ផ្សេងៗ:</label></div>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}


