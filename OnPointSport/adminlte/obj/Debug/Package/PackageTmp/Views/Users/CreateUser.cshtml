@model OnPointSport.Core.Models.User
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #row {
        padding-left: 100px;
        padding-top: 10px;
    }
    #row label {
        padding-top: 10px;
    }
    .box-primary {
        padding: 0px 20px 20px 20px;
    }
    .box-shadow {
        margin-top: 30px;
    }
</style>

@using (Html.BeginForm("CreateUser", "Users", FormMethod.Post))
{
    <!-- Content Wrapper. Contains page content-->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                ពត៍មានអ្នកប្រើប្រាស់ប្រព័ន្ធ
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> ពត៍មានអ្នកប្រើប្រាស់ប្រព័ន្ធ</a></li>
                <li class="active">បង្កើតអ្នកប្រើប្រាស់</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-5 col-sm-5 col-md-2 col-lg-2 col-xl-2">
                                    <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save"></i> រក្សាទុក </button>&nbsp;
                                    <button id="btnCancel" type="button" class="btn btn-danger" onclick="location.href='@Url.Action("UserInformation", "Users")'"><i class="fa fa-remove"></i> បោះបង់ </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="DivCompanyForm" class="box-body box-shadow">
                                <div class="row" id="row">
                                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2"><label>លេខកូដ:</label></div>
                                    <div class="col-xs-7 col-sm-7 col-md-2 col-lg-2 col-xl-2">
                                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control pull-right", @readonly = "readonly" })
                                    </div>
                                    <div class="col-xs-5 col-sm-5 col-md-2 col-lg-2 col-xl-2">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.Active, new { @checked = "checked" })<b> សុពលភាព</b>
                                        </div>
                                    </div>                                   
                                </div>
                                <div class="row" id="row">
                                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                                        <label>ឈ្មោះ:</label>
                                    </div>
                                    <div class="col-xs-7 col-sm-7 col-md-3 col-lg-3 col-xl-3">
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                                <div class="row" id="row">
                                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                                        <label>លេខសម្ងាត់:</label>
                                    </div>
                                    <div class="col-xs-7 col-sm-7 col-md-3 col-lg-3 col-xl-3">
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control pull-right", Type = "password" })

                                    </div>
                                </div>
                                       
                                <div class="row" id="row">
                                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                                        <label>ផ្សេងៗ:</label>
                                    </div>
                                    <div class="col-xs-7 col-sm-7 col-md-5 col-lg-5 col-xl-5">
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control pull-right" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </div>
        }


